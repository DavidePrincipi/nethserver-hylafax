#
# 30sendfax ({$hylafax{'Mail2Fax'}})
#
{
    use NethServer::MailServer;
    if($hylafax{'Mail2Fax'} ne 'enabled') {
        return '# disabled';
    }
    my $mailServer = NethServer::MailServer->new();
    foreach ($mailServer->getDeliveryDomains()) {
        $OUT .= sprintf("%-38s sendfax:\n", 'sendfax@' . $_);
    }
}


